doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    style.
      *{
          margin: 0;
          padding: 0;
      }
      header{
        padding: 10px;
        background:green;
      }
      form{
        max-width: 480px;
        margin: auto;
        text-align: right;
      }
      header textarea{
        width: 450px;
        height: 32px;
        font-size: 14px;
        border-radius: 5px;
        border: 1px solid #e6ecf0;
        padding: 5px 8px;
        resize: none;
        box-sizing: border-box;
      }
      .tweet{
        appearance: none;
        width: 90px;
        text-align: center;
        background: #4AB3F4;
        font-size: 14px;
        line-height: 34px;
        text-align: center;
        color: #fff;
        font-weight: bold;
        border-radius: 20px;
        border: none;
      }
      .Delete{
        appearance: none;
        width: 50px;
        text-align: center;
        background: #FF0000;
        font-size: 12px;
        line-height: 20px;
        text-align: center;
        color: #fff;
        font-weight: bold;
        border-radius: 5px;
        border: dotted snow;
      }
      main{
        padding:10px;
        height:100%;
        background: linear-gradient(to top right, #b8ffbf 0%, #92d417 100%);
      }
      .box{
        display:block;
        position:relative;
        background:snow;
        max-width: 600px;
        margin: auto;
        margin-top: 5px;
        padding:10px;
        border-bottom:solid 1px pink;
        border-radius: 15px;
        box-shadow: 2px 2px 4px -1px green inset;
      }
      img{
        position:absolute;
        top:3px;
        height:64px;
        width:64px;
        border-radius: 16px;
      }
      .image-area{
        display:inline-block;
        width:64px;
      }
      .text-area{
        margin-left:10px;
        display:inline-block;
        width:526px;
        white-space:pre-wrap;
      }
      #sec{
        float:right;
        font-size: 10px;
      }
      #logout{
        color:white;
        padding:2px;
        font-size: 10px;
        border:solid 1px;
        text-decoration: none;
        border-radius: 5px;
      }
      #admin{
        background: rgb(187,172,90);
        background: linear-gradient(49deg, rgba(187,172,90,1) 0%, rgba(218,104,49,1) 66%, rgba(255,0,0,1) 100%);
        border-radius: 10px;
        color:white;
        text-shadow:0px 0px 5px #ffffff;
      }
      footer{
        width: 100%;
        height:50px;
        background-image: url("/images/kusa.png");
        position: fixed;
        bottom: 0px;
        filter: drop-shadow(2px 0px 1px green);
      }
    title 野生の匿名掲示板
  body
    header
      a#logout(href="/posts") ログアウト
      form(action="/posts?7d1e7fb9-add6-4903-be46-3eed284acc16" method="post")
        textarea(name="content" placeholder="つぶやき")
        p
          button.tweet(type="submit") つぶやく
      
    main
      if(posts)
        each post in posts
          .box
            if(post.postedBy === "admin")
              #admin
                .image-area
                  img(src="/images/raion.png" style="margin-right:10px;")
                .text-area
                  span =★= 野生の管理人 =★=
                  span#sec 投稿:#{post.time}
                  p
                    marquee(width="400") #{post.content}だがおー。
                  p
                    form(method="post" action="/posts?delete=2")
                      input(type="hidden" name="id" value=post.id)
                      button.Delete(type="submit") 削除
            - var isDeletable = (nowCookie === post.trackingCookie)
            if((post.char == 0) && (post.trackingCookie))
              .image-area
                img(src="/images/buta.png" style="margin-right:10px;")
